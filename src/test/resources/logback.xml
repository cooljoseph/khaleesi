<!DOCTYPE configuration>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[[%date{yyyy-MM-dd HH:mm:ss}] %-5level %logger.%method\(%file:%line\) - %message%n]]></pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="kr.sidnancy.khaleesi" level="DEBUG"/>
</configuration>